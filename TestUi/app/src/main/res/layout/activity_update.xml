<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="org.schneppd.android.Application.UpdateActivity"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:id="@+id/LegalHeader"
    android:layout_marginBottom="9dp"
    >
    <include layout="@layout/ui_component_header" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/LegalHeader"
    android:layout_above="@id/LegalChoice"

    >
    <include layout="@layout/content_update" />
</LinearLayout>
</RelativeLayout>