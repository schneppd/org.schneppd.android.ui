<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/OmniMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <Button
        android:id="@+id/OmniMenuBtnMostImportant"
        android:layout_width="55dp"
        android:layout_height="55dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="@string/index_menu_principal_button"
        />
        <!-- example background image
         android:background="@drawable/home_btn_test"
        android:drawableTop="@drawable/home_icon_test"
        android:textColor="#FFFFFF"
        android:id="@+id/ButtonTest"
        android:paddingTop="32sp"
        android:drawablePadding="-15sp"
        -->

    <Button
        android:id="@+id/ibtnQuestBoard"
        android:layout_width="55dp"
        android:layout_height="55dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/OmniMenuBtnMostImportant"


        android:layout_marginLeft="9dp"
        android:text="@string/index_menu_second_principal_button"
        />
    <Button
        android:id="@+id/ibtnQuestJournal"
        android:layout_width="55dp"
        android:layout_height="55dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ibtnQuestBoard"

        android:layout_marginLeft="9dp"
        android:text="@string/index_menu_third_principal_button"
        />
    <Button
        android:id="@+id/ibtnTrophy"
        android:layout_width="55dp"
        android:layout_height="55dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/OmniMenuBtnMostImportant"

        android:layout_marginRight="9dp"
        android:text="@string/index_menu_secondary_button"
        />
    <Button
        android:id="@+id/ibtnSettings"
        android:layout_width="55dp"
        android:layout_height="55dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ibtnTrophy"

        android:layout_marginRight="9dp"
        android:text="@string/index_menu_second_secondary_button"
        />
</android.support.constraint.ConstraintLayout>