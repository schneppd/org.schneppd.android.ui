<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yourApp="http://schemas.android.com/apk/lib/com.support.constraint.ConstraintLayout"

    android:id="@+id/OmniMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <ImageButton
        android:id="@+id/OmniMenuBtn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintVertical_chainPacked="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        />
    <ImageButton
        android:id="@+id/OmniMenuBtn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/OmniMenuBtn1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        />
    <ImageButton
        android:id="@+id/OmniMenuBtn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/OmniMenuBtn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        />
    <ImageButton
        android:id="@+id/OmniMenuBtn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/OmniMenuBtn3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        />
    <ImageButton
        android:id="@+id/OmniMenuBtn5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/OmniMenuBtn4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        />
</android.support.constraint.ConstraintLayout>