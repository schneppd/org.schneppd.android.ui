<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivImgTrophy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/tvTitleTrophy"
        app:layout_constraintLeft_toRightOf="@+id/ivImgTrophy"
        app:layout_constraintTop_toTopOf="@+id/ivImgTrophy"
        app:layout_constraintBottom_toBottomOf="@+id/ivImgTrophy"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="@string/sample_trophy_showcase_row_title"
        android:textSize="21sp"
        android:gravity="center"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>